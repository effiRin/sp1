<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.sp1.mapper.SmemberMapper">

    <resultMap id="memberMap" type="org.zerock.sp1.domain.Smember">
        <result property="mid" column="mid"></result>
        <result property="mpw" column="mpw"></result>
        <result property="mname" column="mname"></result>
        <result property="nickname" column="nickname"></result>
        <collection property="sauthList" resultMap="authMap"></collection>
    </resultMap>

    <resultMap id="authMap" type="org.zerock.sp1.domain.Sauth">
        <result property="mid" column="mid"></result>
        <result property="roleName" column="roleName"></result>
    </resultMap>

    <select id = "selectOne" resultMap="memberMap">
        select * from tbl_smember mem inner join tbl_sauth auth
                                                 on mem.mid = auth.mid
        where mem.mid = #{mid}
    </select>

</mapper>